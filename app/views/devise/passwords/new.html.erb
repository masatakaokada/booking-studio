<div class='passwordUpdatePage'>
  <div class='container'>
    <h2 class="title m-4">パスワードをお忘れですか？</h2>

    <%= form_with scope: resource, as: resource_name, url: password_path(resource_name), html: { class: "mt-5, update_password" }, local: true do |f| %>
    <div class="text-center"><%= render "devise/shared/error_messages", resource: resource %></div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "emailを入力してください" %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "パスワード再設定メールを送る", class: "passwordResetBtn" %>
    </div>
    <% end %>

    <div class="text-center"><%= render "devise/shared/links" %></div>
  </div>
</div>
